generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id        String     @id 
  username  String  @unique

  ratings   Ratings[]
}

model Butterflies {
  id            String     @id 
  commonName    String
  species       String
  article       String

  ratings       Ratings[]
}

model Ratings {
  id            String  @id
  userId        String
  butterflyId   String
  rating        Int

  user          Users  @relation(fields: [userId], references: [id], onDelete: Cascade)
  butterfly     Butterflies  @relation(fields: [butterflyId], references: [id], onDelete: Cascade)
}
