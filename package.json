{
  "name": "butterfly-critique-homework",
  "version": "0.0.0",
  "description": "butterfly critique homework assignment",
  "type": "module",
  "engines": {
    "node": ">= 22.11 < 23"
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@types/eslint__js": "~8.42",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "eslint": "~9.17",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "~2.1"
  },
  "scripts": {
    "start": "node --watch build/src/main.js",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "lint": "eslint .",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test": "dotenv -e .env.test -- prisma migrate dev && vitest watch --config vitest.config.ts",
    "db:prepare": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "tslib": "~2.8",
    "tsx": "^4.20.6"
  }
}
